# ==============================================================================
# Bangkok Fortune Voice AI - Environment Variables Sample
# ==============================================================================
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to version control

# ------------------------------------------------------------------------------
# OpenAI Configuration
# ------------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ------------------------------------------------------------------------------
# ElevenLabs Configuration (Text-to-Speech)
# ------------------------------------------------------------------------------
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ------------------------------------------------------------------------------
# Square Configuration (Appointments & Payments)
# ------------------------------------------------------------------------------
# Get your access token from: https://developer.squareup.com/apps
# Use sandbox token for testing, production token for live
SQUARE_ACCESS_TOKEN=EAAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SQUARE_LOCATION_ID=xxxxxxxxxxxxxxxx
SQUARE_ENVIRONMENT=sandbox  # or 'production'

# ------------------------------------------------------------------------------
# Twilio Configuration (Voice & SMS)
# ------------------------------------------------------------------------------
# Get your credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+19291234567  # Your NYC 929 number

# ------------------------------------------------------------------------------
# LINE Configuration (Optional - for LINE OA chat integration)
# ------------------------------------------------------------------------------
# Get your credentials from: https://developers.line.biz/console/
LINE_CHANNEL_ACCESS_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LINE_CHANNEL_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ------------------------------------------------------------------------------
# Make.com Webhook (Optional - for owner automations)
# ------------------------------------------------------------------------------
# Create a webhook trigger in Make.com and paste the URL here
MAKE_WEBHOOK_URL=https://hook.us1.make.com/xxxxxxxxxxxxxxxxxxxxx

# ------------------------------------------------------------------------------
# Owner Notifications
# ------------------------------------------------------------------------------
# Phone number to receive daily reports and alerts (E.164 format)
OWNER_ALERT_PHONE=+19171234567

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
# Server
PORT=3000
NODE_ENV=development  # or 'production'

# Timezone for business operations
TIMEZONE=America/New_York

# Daily report time (24-hour format, in TIMEZONE above)
DAILY_REPORT_TIME=22:30

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
# For Railway deployment, this will be auto-injected
# For local development, use SQLite
DATABASE_URL=file:./data/voice-ai.db  # SQLite
# DATABASE_URL=postgresql://user:pass@host:5432/dbname  # PostgreSQL for production

# ------------------------------------------------------------------------------
# Security & Rate Limiting
# ------------------------------------------------------------------------------
# Admin API token for testing tools endpoints (generate a random string)
ADMIN_API_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Cost guardrails (USD)
MAX_DAILY_COST=50.00
MAX_PER_CALL_COST=5.00

# OpenAI API rate limits
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT_MS=30000

# ------------------------------------------------------------------------------
# Logging & Monitoring
# ------------------------------------------------------------------------------
LOG_LEVEL=info  # debug, info, warn, error
LOG_PII_REDACTION=true

# Sentry (optional - for error tracking)
# SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
FEATURE_LINE_INTEGRATION=false
FEATURE_MAKE_WEBHOOKS=false
FEATURE_DAILY_REPORTS=true
FEATURE_VOICE_BIOMETRICS=false
