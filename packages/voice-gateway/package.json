{
  "name": "bangkok-fortune-voice-ai",
  "version": "1.0.0",
  "description": "Production-grade bilingual Thai/English AI voice receptionist for NYC spa",
  "private": true,
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/index.js",
    "start": "NODE_ENV=production node src/index.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "node src/test-endpoints.js",
    "test:integration": "node src/test-integration.js",
    "health": "curl ${BASE_URL:-http://localhost:3000}/health",
    "validate:env": "node src/validate-env.js",
    "lint": "eslint src/**/*.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf node_modules logs/*.log",
    "logs": "tail -f logs/combined.log",
    "deploy:railway": "railway up",
    "postinstall": "node src/validate-env.js || true"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@twilio/voice-sdk": "^2.11.0",
    "axios": "^1.6.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "openai": "^4.28.0",
    "square": "^38.0.0",
    "twilio": "^5.0.0",
    "winston": "^3.11.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.10",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bangkokfortune-netizen/bangkok-fortune-voice-ai"
  },
  "keywords": [
    "voice-ai",
    "twilio",
    "openai",
    "square",
    "appointments",
    "bilingual",
    "thai",
    "receptionist",
    "elevenlabs",
    "realtime-api"
  ],
  "author": "Bangkok Fortune",
  "license": "MIT"
}
