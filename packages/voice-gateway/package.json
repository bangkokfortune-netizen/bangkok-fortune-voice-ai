{
  "name": "@bangkok-fortune/voice-gateway",
  "version": "1.0.1",
  "description": "Production-grade bilingual Thai/English AI voice receptionist for NYC spa",
  "private": true,
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf node_modules logs/*.log",
    "logs": "tail -f logs/combined.log"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/websocket": "^10.0.0",
    "fastify": "^4.26.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.28.0",
    "pino": "^8.19.0",
    "square": "^38.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bangkokfortune-netizen/bangkok-fortune-voice-ai"
  },
  "keywords": [
    "voice-ai",
    "twilio",
    "openai",
    "square",
    "appointments",
    "bilingual",
    "thai",
    "receptionist",
    "realtime-api"
  ],
  "author": "Bangkok Fortune",
  "license": "MIT"
}
