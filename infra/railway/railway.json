{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npx pnpm@latest install && npx pnpm --filter @bangkok-fortune/voice-gateway build"
  },
  "deploy": {
    "startCommand": "npx pnpm --filter @bangkok-fortune/voice-gateway start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 30
  },
  "regions": [
    "us-east"
  ]
}
